{
  "name": "layered",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo dev --filter=@layered/web",
    "types:generate": "turbo types:generate",
    "build": "turbo build",
    "deploy": "turbo deploy",
    "db:migrations:generate": "turbo db:migrations:generate",
    "db:migrations:list": "turbo db:migrations:list",
    "db:migrations:list:production": "turbo db:migrations:list:production",
    "db:migrations:apply": "turbo db:migrations:apply",
    "db:migrations:apply:production": "turbo db:migrations:apply:production"
  },
  "devDependencies": {
    "turbo": "^2.7.2"
  }
}
