{
  "name": "layered",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "cd apps/web && bun dev",
    "format": "oxfmt --check",
    "format:fix": "oxfmt",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --type-aware --type-check --fix",
    "types:generate": "turbo types:generate",
    "build": "bun --filter=@layered/web build",
    "deploy": "bun --filter=@layered/web deploy",
    "db:migrations:generate": "bun --filter=@layered/web db:migrations:generate",
    "db:migrations:list": "bun --filter=@layered/web db:migrations:list",
    "db:migrations:list:prod": "bun --filter=@layered/web db:migrations:list:prod",
    "db:migrations:apply": "bun --filter=@layered/web db:migrations:apply",
    "db:migrations:apply:prod": "bun --filter=@layered/web db:migrations:apply:prod"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "lefthook": "^2.0.14",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "oxlint-tsgolint": "^0.11.0",
    "turbo": "^2.7.4"
  },
  "packageManager": "bun@1.3.5"
}
